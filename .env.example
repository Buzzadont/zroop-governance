# Network RPC URLs
SKETCHPAD_RPC_URL=https://rpc.sketchpad.forma.network
FORMA_RPC_URL=https://rpc.forma.network

# Deployer private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# API Keys for contract verification
SKETCHPAD_API_KEY=your_sketchpad_api_key_here
FORMA_API_KEY=your_forma_api_key_here

# Contract addresses (to be filled after deployment)
ZROOP_VOTES_ADDRESS=
ZROOP_TIMELOCK_ADDRESS=
ZROOP_GOVERNOR_IMPL_ADDRESS=
ZROOP_GOVERNOR_PROXY_ADDRESS=

# Network parameters
IS_MAINNET=false
VOTING_DELAY=1
VOTING_PERIOD=604800  # 7 days in seconds
QUORUM_PERCENTAGE=10
MIN_DEPOSIT=100000000000000000  # 0.1 TIA for testnet

# Treasury address
TREASURY_ADDRESS=

# NFT contract address
NFT_CONTRACT_ADDRESS=

# Gas settings
GAS_LIMIT=5000000
GAS_PRICE=50000000000  # 50 gwei

# Other settings
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here  # Optional, for gas reporting